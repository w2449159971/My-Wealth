 void array( ){
	int i, j,k;
	int a[4][4];
	printf("请输入一个递增二维数组");
	for (i = 0; i < 4; i++){
		for (j = 0; j < 4; j++){
			scanf("%d", &a[i][j]);
			}
			if (a[i][j] >= a[i][j - 1] || a[i][j] >= a[i - 1][j]){
		    printf("输入错误!");
			break;
	}
			scanf("%d", &k);
			while (k == a[i][j]){
				printf("您输入的数字在数组中");
			}
}
